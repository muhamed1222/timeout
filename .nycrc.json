{
  "extends": "@istanbuljs/nyc-config-typescript",
  "reporter": ["text", "json", "html", "lcov"],
  "report-dir": "./coverage",
  "exclude": [
    "**/*.config.ts",
    "**/*.config.js",
    "**/*.d.ts",
    "tests/**",
    "dist/**",
    "node_modules/**",
    "api/**"
  ],
  "check-coverage": true,
  "lines": 80,
  "functions": 80,
  "branches": 75,
  "statements": 80
}

