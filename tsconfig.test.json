{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node", "vitest/globals", "@testing-library/jest-dom/vitest"],
    "noEmit": true
  },
  "include": [
    "tests/**/*",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**",
    "vitest-setup.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
